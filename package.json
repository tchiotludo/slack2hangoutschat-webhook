{
  "name": "slack2hangoutschat-webhook",
  "version": "0.1.1",
  "description": "Slack 2 Google HangoutChat webhook converter",
  "repository": {
    "type": "git",
    "url": "https://github.com/tchiotludo/slack2hangoutschat-webhook.git"
  },
  "keywords": [
    "hangouts-chat",
    "google-chat",
    "slack",
    "webhook"
  ],
  "author": "tchiotludo",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "build": "npm run build:ts && npm run lint:ts",
    "build:ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:test": "npm run test -- --watchAll",
    "watch:node": "nodemon dist/server.js",
    "watch:ts": "tsc -w",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "npm run lint:ts && ",
    "lint:ts": "tslint -c tslint.json -p tsconfig.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 6.0.0"
  },
  "dependencies": {
    "@slack/client": "^4.8.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-winston": "latest",
    "hangouts-chat-webhook": "^0.1.1",
    "superagent": "^3.8.3",
    "winston": "latest"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-winston": "^3.0.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "@types/superagent": "^3.8.4",
    "@types/supertest": "^2.0.4",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "jest-junit": "^5.2.0",
    "nodemon": "^1.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3.1.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
